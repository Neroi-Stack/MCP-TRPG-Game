    "version": "0.2.0",
    "configurations": [
        {
			"name": "Launch TRPG MCP ToolBox",
			"type": "coreclr",
			"request": "launch",
			"program": "dotnet",
			"args": [
				"run",
				"--project",
				"src/ToolBox/ToolBox.csproj",
				"--framework",
				"net9.0"
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
        }
    ]
}